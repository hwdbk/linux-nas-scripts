#!/bin/bash

generate_script() {
	echo "generating $3"
	exec 3<$1
	exec 4<$2
	echo '#!/bin/bash' > $3
	echo '# note: this is an auto-generated script (by gen_mac2lin_lin2mac_scripts) - DO NOT EDIT' >> $3
	echo 'if (( $# == 0 )) ; then set -- /dev/stdin ; fi' >> $3
	echo 'for i in "$@" ; do' >> $3
	echo 'cat "$i" | sed \' >> $3
	while read -u 3 m ; do
		read -u 4 s
		echo "	-e 's/$m/$s/g' \\" >> $3
	done
	echo >> $3
	echo 'done' >> $3
	echo '#EOF' >> $3
}

# generate translation table
iconv -f UTF-8 -t UTF-8-MAC utf-8_linux.txt > utf-8_mac.txt
if (( $(wc -l < utf-8_mac.txt) != $(wc -l < utf-8_linux.txt) )) ; then echo "line count mismatch in utf-8_mac.txt" >&2 ; exit 1 ; fi

# extract the differences
diff utf-8_mac.txt utf-8_linux.txt | grep '^> ' | sed -e 's/^> //' > lindiffs.txt
diff utf-8_mac.txt utf-8_linux.txt | grep '^< ' | sed -e 's/^< //' > macdiffs.txt
if (( $(wc -l < macdiffs.txt) != $(wc -l < lindiffs.txt) )) ; then echo "line count mismatch in macdiffs.txt or lindiffs.txt" >&2 ; exit 1 ; fi

# generate the mac2lin and lin2mac scripts for Linux
generate_script macdiffs.txt lindiffs.txt mac2lin ; chmod 755 mac2lin
generate_script lindiffs.txt macdiffs.txt lin2mac ; chmod 755 lin2mac

# special case on synology samba 'mac' vfs: a special-encoded '/' translates to a ':' on mac
echo "" >> lindiffs.txt
echo ":" >> macdiffs.txt
# note: two other nasty exceptions are ; (as a unicode chr 903) and · which map ambiguously to ; and · with iconv
# bottom line is that utf-8_mac.txt should not contain duplicates or the scripts will not bijective

# generate the mac2syn and syn2mac scripts for Synology NAS
generate_script macdiffs.txt lindiffs.txt mac2syn ; chmod 755 mac2syn
generate_script lindiffs.txt macdiffs.txt syn2mac ; chmod 755 syn2mac

# cleanup
rm utf-8_mac.txt lindiffs.txt macdiffs.txt

#EOF
